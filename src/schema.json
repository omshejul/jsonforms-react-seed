{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "formName": {
      "type": "string",
      "title": "Form Name"
    },
    "formData": {
      "type": "object",
      "properties": {
        "question": {
          "type": "string",
          "required": ["question"]
        },
        "response": {
          "type": "string"
        },
        "Conditions": {
          "type": "object",
          "properties": {
            "PreCondition": {
              "type": "string"
            },
            "PreConditionError": {
              "type": "string"
            },
            "PostCondition": {
              "type": "string"
            },
            "PostConditionError": {
              "type": "string"
            }
          },
          "required": ["PreCondition", "PreConditionError"]
        },
    
        "APIs": {
          "type": "array",
          "items": { "$ref": "#/definitions/apiItem" }
        },
        "Functions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "Input": { "type": "string" },
              "Output": { "type": "string" },
              "Description": { "type": "string" }
            },
            "required": ["Input", "Output", "Description"]
          }
        },
        "ExecutionOrder": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "type": { "type": "string" },
              "input": { "type": "string" },
              "evaluationFunction": { "type": "string" },
              "error": { "type": "string" }
            },
            "required": ["type", "name"]
          }
        },
        "NextNodes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "valueCheck": { "type": "string" },
              "next": { "type": "string" },
              "condition": {
                "type": "string",
                "description": "EXACT | SIMILAR | PYTHON = ()"
              }
            },
            "required": ["valueCheck", "next", "condition"]
          }
        },
        "closing_message": {
          "type": "string",
          "enum": ["TRUE","FALSE"]
        },
        "error_message": {
          "type": "string"
        }
      },
      "required": ["closing_message", "error_message"]
    }
  },
  "definitions": {
    "apiItem": {
      "type": "object",
      "properties": {
        "Name": { "type": "string" },
        "Endpoint": { "type": "string" },
        "Method": {
          "type": "string",
          "enum": ["GET", "POST", "PUT", "DELETE"]
        },
        "Params": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "key": { "type": "string" },
              "value": { "type": "string" }
            },
            "required": ["key", "value"]
          }
        },
        "error": { "type": "string" }
      },
      "required": ["Name", "Endpoint", "Method"]
    }
  },
  "required": ["formName"]
}
