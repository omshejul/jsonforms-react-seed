{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "goal_name": { "type": "string" },
    "client_id": { "type": "string" },
    "language": { "type": "string" },
    "message": { "type": "string" },
    "question": { "type": "string" },
    "switch_language": { "type": "boolean" },
    "slots": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "form_name": {
            "type": "string"
          },
          "form_data": {
            "type": "object",
            "properties": {
              "question": { "type": "string" },
              "response": { "type": "string" },
              "conditions": {
                "type": "object",
                "properties": {
                  "pre_condition": { "type": "string" },
                  "pre_condition_error": { "type": "string" },
                  "post_condition": { "type": "string" },
                  "post_condition_error": { "type": "string" }
                },
                "required": ["pre_condition", "pre_condition_error"]
              },
              "apis": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "endpoint": { "type": "string" },
                    "method": {
                      "type": "string",
                      "enum": ["GET", "POST", "PUT", "DELETE"]
                    },
                    "params": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "key": { "type": "string" },
                          "value": { "type": "string" }
                        },
                        "required": ["key", "value"]
                      }
                    },
                    "error": { "type": "string" }
                  },
                  "required": ["name", "endpoint", "method"]
                }
              },
              "functions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "input": { "type": "string" },
                    "output": { "type": "string" },
                    "description": { "type": "string" }
                  },
                  "required": ["input", "output", "description"]
                }
              },
              "execution_order": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "type": {
                      "type": "string",
                      "enum": ["API", "FUNCTION"]
                    },
                    "input": { "type": "string" },
                    "evaluation_function": { "type": "string" },
                    "error": { "type": "string" }
                  },
                  "required": ["type", "name"]
                }
              },
              "next_node": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "value_to_check": { "type": "string" },
                    "next_node": { "type": "string" },
                    "value_match": { "type": "string" },
                    "condition_type": {
                      "type": "string",
                      "description": "EXACT | SIMILAR | PYTHON = ()"
                    }
                  },
                  "required": ["value_to_check", "next_node", "condition_type"]
                }
              },
              "closing_message": { "type": "boolean" },
              "error_message": { "type": "string" }
            },
            "required": ["closing_message", "error_message"]
          }
        },
        "required": ["form_name", "form_data"]
      }
    }
  }
}
