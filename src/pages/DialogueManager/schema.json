    "slots": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "form_name": {
            "type": "string"
          },
          "form_data": {
            "type": "object",
            "properties": {
              "question": { "type": "string" },
              "bot_message": { "type": "string" },
              "choices": { "type": "boolean" },
              "response": { "type": "string" },
              "conditions": {
                "type": "object",
                "properties": {
                  "pre_condition": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "description": "If condition is a Python statement enclose with parentheses ()"
                    }
                  },
                  "pre_condition_error": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "post_condition": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "description": "If condition is a Python statement enclose with parentheses ()"
                    }
                  },
                  "post_condition_error": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": ["pre_condition", "pre_condition_error"]
              },
              "apis": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "endpoint": { "type": "string" },
                    "output": { "type": "string" },
                    "method": {
                      "type": "string",
                      "enum": ["GET", "POST", "PUT", "DELETE"]
                    },
                    "params": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "key": { "type": "string" },
                          "value": { "type": "string" }
                        },
                        "required": ["key", "value"]
                      }
                    },
                    "error_message": { "type": "string" }
                  },
                  "required": ["name", "endpoint", "method"]
                }
              },
              "functions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "input": { "type": "string" },
                    "output": { "type": "string" },
                    "description": { "type": "string" }
                  },
                  "required": ["input", "output", "description"]
                }
              },
              "execution_order": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "type": {
                      "type": "string",
                      "enum": ["API", "FUNCTION"]
                    },
                    "input": { "type": "string" },
                    "evaluation_function": { "type": "string" },
                    "error": { "type": "string" }
                  },
                  "required": ["type", "name"]
                }
              },
              "next_node": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "value_to_check": { "type": "string" },
                    "next_node": { "type": "string" },
                    "value_match": { "type": "string" },
                    "condition_type": {
                      "type": "string",
                      "description": "EXACT | SIMILAR | PYTHON = ()"
                    }
                  },
                  "required": ["value_to_check", "next_node", "condition_type"]
                }
              },
              "closing_message": { "type": "boolean" },
              "error_message": { "type": "string" }
            },
            "required": ["question", "bot_message", "error_message"]
          }
        },
        "required": ["form_name", "form_data"]
      }
    }
  },
  "required": ["goal_name", "client_id", "question"]
